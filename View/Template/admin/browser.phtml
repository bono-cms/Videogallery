<form>
    <div class="table-responsive">
        <table class="table table-striped table-hover table-bordered table-condensed">
            <thead>
                <tr>
                    <th>
                        <?php if (!empty($files)): ?>
                        <input type="checkbox" />
                        <?php endif; ?>
                    </th>
                    <th><?php $this->show('#'); ?></th>
                    <th><?php $this->show('Title'); ?></th>
                    <th><?php $this->show('Default'); ?></th>
                    <th><?php $this->show('SEO Enabled'); ?></th>
                    <th><?php $this->show('Actions'); ?></th>
                </tr>
            </thead>
            <?php if (!empty($files)): ?>
            
            <tbody>
                <?php foreach ($files as $file): ?>
                <tr>
                    <td>
                        <input type="checkbox" name="toDelete[<?php echo $file->getId(); ?>]" />
                    </td>
                    <td><?php echo $file->getId(); ?></td>
                    <td><?php echo $file->getTitle(); ?></td>
                    <td>
                        <?php echo Element::radio('default', $file->getId(), $file->getDefault()); ?>
                    </td>
                    <td>
                        <?php echo Element::checkbox(sprintf('seo[%s]', $file->getId()), $file->getSeo()); ?>
                    </td>
                    <td>
                        <a class="view" href="<?php echo $file->getUrl(); ?>"></a>
                        <a class="edit" href="<?php echo $this->url('Videogallery:Admin:File:Edit@indexAction', $file->getId()); ?>"></a>
                        <a class="delete" href="#" data-id="<?php echo $file->getId(); ?>"></a>
                    </td>
                </tr>
                <?php endforeach; ?>
            </tbody>
            <?php endif; ?>
            
        </table>
    </div>
